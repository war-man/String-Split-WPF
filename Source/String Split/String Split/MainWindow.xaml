<Window x:Class="String_Split.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="String split" Height="300" Width="800">
    <Grid>
        <Canvas>
            <TextBlock Text="1. Tính tổng các phân số :" Canvas.Left="24" Canvas.Top="21" Width="195" Height="23" FontSize="16"></TextBlock>
            <TextBox Name="txt1" Background="AliceBlue"  Width="746" Canvas.Left="24" Canvas.Top="63" Height="44" FontSize="16">
                <TextBox.ToolTip>
                    <ToolTip Content ="Type something, ex : 1/2 + 3/4 + 2/4"/>
                </TextBox.ToolTip>
            </TextBox>
            <Button Name="btn1" Click="btn1_Click" Canvas.Left="330" Canvas.Top="137" Height="40" Width="134" Content="Show Result" FontSize="18" FontWeight="Bold"></Button>
        </Canvas>
    </Grid>
</Window>
